.side-ber
  .side-header
    .side-header-box
      .side-header-box_user-name
        = current_user.name
      %ul.side-header-box_menu
        %li.side-header-box_new-group
          = link_to new_group_path  do
            = icon("fa","edit")
        %li.side-header-box_edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to @group do
          .group__name
            = group.name
